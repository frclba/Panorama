generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id    String     @id @default(uuid())
  name  String
  price Float
}

model Customer {
  id    String     @id @default(uuid())
  name  String
  email String     @unique
  street String
  city String
  state String
  zip String
  country String
  active Boolean
  rewardPoints Int
}